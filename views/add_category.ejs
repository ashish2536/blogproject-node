<%- include('header')%>

    <%- include("header") %>


        <!-- HEADER DESKTOP-->

        <!-- MAIN CONTENT-->
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <% if(locals.flash.success.length> 0 && locals.flash.success) {%>
                                    <div class="alert alert-success">
                                        <%= locals.flash.success %>
                                    </div>
                                    <% } %>

                                        <% if(locals.flash.error.length> 0 && locals.flash.error) {%>
                                            <div class="alert alert-danger">
                                                <%= locals.flash.error %>
                                            </div>
                                            <% } %>
                                                <div class="card-header">
                                                    <strong>Add Category </strong>
                                                </div>
                                                <div class="card-body card-block">
                                                    <form action="/admin/category/categoryInsertData" method="post"
                                                        class="form-horizontal">

                                                        <div class="row form-group">
                                                            <div class="col col-md-3">
                                                                <label for="text-input"
                                                                    class=" form-control-label"></label>
                                                                Enter category
                                                                Title</label>
                                                            </div>
                                                            <div class="col-12 col-md-9">
                                                                <input type="text" id="text-input" name="title"
                                                                    placeholder="enter category title"
                                                                    class="form-control">

                                                            </div>
                                                        </div>

                                                        <div class="card-footer">
                                                            <button type="submit" class="btn btn-primary btn-sm">
                                                                <i class="fa fa-dot-circle-o"></i> Submit
                                                            </button>
                                                            <button type="reset" class="btn btn-danger btn-sm">
                                                                <i class="fa fa-ban"></i> Reset
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>

                            </div>
                        </div>
                    </div>


                    <%- include("footer") %>

                        <%- include('footer')%>