<%- include("header") %>


            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <% var name = admindata.name.split(" "); %>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>add admin </strong> 
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/adminEditData" method="post" enctype="multipart/form-data" class="form-horizontal">
                                            <input type="hidden" name="id" value="<%=admindata.id %>">
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">enter fast name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" value="<%= name[0] %>" name="fname" placeholder="fast name" class="form-control">
                                                    
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">enter last name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="email-input" value="<%= name[1] %>"  name="lname" placeholder="last name" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">enter Email </label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="email" id="email-input" name="email" value="<%= admindata.email %>" placeholder="Enter Email" class="form-control">
                                                    
                                                </div>
                                            </div>
                                        

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">city Select</label>
                                                </div>

                                                <% var city=["surat", "rajkot"] %>
                                                <div class="col-12 col-md-9">
                                                    <select name="city" id="select" class="form-control">
                                                        <option value="0">--select--</option>
                                                        <% for(var c of city){ %>
                                                         <option value="<%=c%>" <% if(admindata.city==c){ %><%= 'selected' %> <%}%> ><%= c %></option> 
                                                       <% } %>  
                                                        
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">gender</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check">
                                                        <div class="radio">
                                                            <label for="radio1" class="form-check-label ">
                                                                <input type="radio" id="radio1" name="gender" value="male" class="form-check-input" <% if(admindata.gender == 'male') { %><%= 'checked'%><% } %>> male
                                                            </label>
                                                        </div>
                                                        <div class="radio">
                                                            <label for="radio2" class="form-check-label ">
                                                                <input type="radio" id="radio2" name="gender" value="female" class="form-check-input" <% if(admindata.gender == 'famale') { %><%= 'checked'%><% } %>> female
                                                            </label>
                                                        </div>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">hobby</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-checkbox1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox1" name="hobby" value="song" class="form-check-input" <% if(admindata.hobby.includes('song')){ %><%= 'checked' %><% } %> >song
                                                        </label>
                                                        <label for="inline-checkbox2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox2" name="hobby" value="game" class="form-check-input" <% if(admindata.hobby.includes('game')){ %><%= 'checked' %><% } %>>game
                                                        </label>
                                                        <label for="inline-checkbox3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox3" name="hobby" value="coding" class="form-check-input" <% if(admindata.hobby.includes('coding')){ %><%= 'checked' %><% } %>>coding
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">messages</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="messages" id="textarea-input" rows="3" placeholder="messages..." class="form-control"><%= admindata.messages %></textarea>
                                                </div>
                                            </div>
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-multiple-input" class=" form-control-label">image</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-multiple-input" name="image" multiple="" class="form-control-file">
                                                    <img src="<%= admindata.image %>" alt="" height="100" width="100">
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Edit
                                                </button>
                                                <button type="reset" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-ban"></i> Reset
                                                </button>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                        

<%- include("footer") %>