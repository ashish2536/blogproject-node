<%- include("header") %>


    <!-- END HEADER DESKTOP-->

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <% if(locals.flash.success.length> 0 && locals.flash.success) {%>
                        <div class="alert alert-success">
                            <%= locals.flash.success %>
                        </div>
                        <% } %>
                            <% if(locals.flash.error.length> 0 && locals.flash.error) {%>
                                <div class="alert alert-success">
                                    <%= locals.flash.error %>
                                </div>
                                <% } %>

                                    <!-- SEARCHING INPUT -->
                                    <form>
                                        <input type="text" name="search" value="<%= search %>">
                                        <input type="submit" name="searching" value="search">
                                    </form>
                                    <!-- SERACHING INPUT CLOSE -->

                                    <div class="col-lg-12">
                                        <div class="table-responsive table--no-card m-b-30">
                                            <table class="table table-borderless table-striped table-earning">
                                                <thead>
                                                    <tr>
                                                        <th>No</th>
                                                        <th>Name</th>
                                                        <th>Title</th>
                                                        <th>Newname</th>
                                                        <th>Date</th>
                                                        <th>Messages</th>
                                                        <th>Image</th>
                                                        <th>Action</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% var no=1; for(var ad of postData){ %>
                                                        <tr>
                                                            <td>
                                                                <%= no++%>
                                                            </td>
                                                            <td>
                                                                <%= ad.title %>
                                                            </td>
                                                            <td>
                                                                <%= ad.username %>
                                                            </td>
                                                            <td>
                                                                <%= ad.newname %>
                                                            </td>
                                                            <td>
                                                                <%= ad.current_date %>
                                                            </td>
                                                            <td>
                                                                <%= ad.messages %>
                                                            </td>
                                                            <td>
                                                                <img src="<%= ad.postimage %>" alt="" height="100">
                                                            </td>
                                                            <td style="font-size: 25px;">
                                                                <a href="/admin/deleteAdminRecord/<%= ad.id %>"><i
                                                                        class="fa fa-trash"></i></a>
                                                                <a href="/admin/updateAdminRecord?id=<%= ad.id %>"><i
                                                                        class="fa fa-edit"></i></i></a>
                                                            </td>
                                                        </tr>
                                                        <% } %>

                                                            <!-- 1 2 3 4 NEXT PREV -->
                                                            <tr>
                                                                <td colspan="9">
                                                                    <% for(var i=0; i<totalpage;) { %>
                                                                        <a href="/admin/view_post/?page=<%=i%>">
                                                                            <%= ++i %>
                                                                        </a>
                                                                        <% } %>
                                                                </td>
                                                            </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                </div>



                <%- include("footer") %>